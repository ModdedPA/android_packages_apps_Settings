<?xml version="1.0" encoding="UTF-8"?>

<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/network_speed_color_title">

    <!-- Network speed colors -->
    <PreferenceCategory
        android:title="@string/network_speed_color_title">

        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="network_speed_color"
            android:title="@string/network_speed_color_style"
            android:defaultValue="#33b5e5" />

        <CheckBoxPreference
            android:key="status_bar_traffic_use_icon_color"
            android:title="@string/status_bar_traffic_use_icon_color" />
    </PreferenceCategory>

</PreferenceScreen>
