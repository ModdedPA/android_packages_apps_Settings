<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        android:title="@string/tool_bar_settings">

    <PreferenceCategory
        android:title="@string/tool_bar_ui">

       <CheckBoxPreference
            android:key="use_alt_resolver"
            android:title="@string/alt_resolver"
            android:summary="@string/alt_resolver_summary"
            android:defaultValue="false" />

       <CheckBoxPreference
            android:key="screen_on_notification_led"
            android:title="@string/screen_on_notification_led_title"
            android:summary="@string/screen_on_notification_led_summary"
            android:defaultValue="true" />

        <PreferenceScreen
            android:key="recents_ram_bar"
            android:fragment="com.android.settings.RamBar"
            android:title="@string/ram_bar" />

        <PreferenceScreen
            android:id="@+id/animations"
            android:title="@string/title_animation_controls"
            android:summary="@string/header_summary_animation"
            android:fragment="com.android.settings.cyanogenmod.fragments.AnimationControls" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/tool_bar_qs">

        <CheckBoxPreference
            android:key="quick_pulldown"
            android:title="@string/quick_pulldown_title"
            android:summary="@string/quick_pulldown_summary"
            android:defaultValue="false" />
         
        <PreferenceScreen
            android:key="quick_settings_panel"
            android:fragment="com.android.settings.cyanogenmod.QuickSettings"
            android:title="@string/quick_settings_panel_title" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="toolbar_status"
        android:title="@string/tool_bar_status_header">

        <CheckBoxPreference
            android:key="show_clock"
            android:title="@string/show_clock_title" />
        
        <ListPreference
            android:key="am_pm_style"
            android:dialogTitle="@string/am_pm_style_title"
            android:title="@string/am_pm_style_title"
            android:entries="@array/status_bar_sizes_entries"
            android:entryValues="@array/status_bar_sizes_values" />

        <CheckBoxPreference
            android:key="circle_battery"
            android:title="@string/circle_battery_title" />

         <CheckBoxPreference
            android:key="status_bar_notif_count"
            android:title="@string/status_bar_notif_count_title"
            android:summary="@string/status_bar_notif_count_summary"
            android:defaultValue="false" />

        <ListPreference
            android:key="status_bar_max_notifications"
            android:dialogTitle="@string/status_bar_max_notifications_title"
            android:title="@string/status_bar_max_notifications_title"
            android:summary="@string/status_bar_max_notifications_summary"
            android:entries="@array/status_bar_max_notifications"
            android:entryValues="@array/status_bar_max_notifications" />

        <CheckBoxPreference
            android:key="status_bar_donotdisturb"
            android:title="@string/status_bar_donotdisturb_title"
            android:summary="@string/status_bar_donotdisturb_summary"
            android:defaultValue="false" />
 
        <CheckBoxPreference
            android:key="status_bar_quick_peek"
            android:title="@string/statusbar_quick_peek_title"
            android:summary="@string/statusbar_quick_peek_summary"
            android:defaultValue="false" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/tool_bar_traffic">

        <!-- Network Speed Indicator -->
        <CheckBoxPreference
            android:key="status_bar_traffic_enable"
            android:title="@string/enable_network_speed"
            android:summary="@string/enable_network_speed_summary" 
            android:defaultValue="false" /> 

        <PreferenceScreen
            android:fragment="com.android.settings.cyanogenmod.StatusBarTrafficStyle"
            android:key="network_speed_color"
            android:title="@string/network_speed_color_title" 
            android:summary="@string/network_speed_color_summary" />
 
        <com.android.settings.cyanogenmod.SystemSettingCheckBoxPreference
            android:key="status_bar_traffic_hide"
            android:title="@string/hide_network_speed"
            android:summary="@string/hide_network_speed_summary"
            android:dependency="status_bar_traffic_enable"
            android:defaultValue="true" />

        <ListPreference
            android:key="status_bar_traffic_summary"
            android:dialogTitle="@string/network_speed_summary"
            android:title="@string/network_speed_summary"
            android:dependency="status_bar_traffic_enable"
            android:entries="@array/network_speed_summary_entries"
            android:entryValues="@array/network_speed_summary_values" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/tool_bar_notification">

        <Preference
            android:fragment="com.android.settings.cyanogenmod.NotificationDrawerStyle"
            android:key="notification_style"
            android:title="@string/notification_style_title"
            android:summary="@string/notification_style_summary" />

        <ListPreference
            android:key="notifications_behaviour"
            android:title="@string/notification_behaviour_title"
            android:entries="@array/notifs_beh_entries"
            android:entryValues="@array/notifs_beh_values" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="toolbar_navigation"
        android:title="@string/tool_bar_navigation_header">

        <CheckBoxPreference
            android:key="nav_bar_tabui_menu"
            android:title="@string/navigation_bar_tabui_menu_title"
            android:summary="@string/navigation_bar_tabui_menu_summary" />

        <PreferenceScreen
            android:key="navigation_bar_controls"
            android:fragment="com.android.settings.cyanogenmod.NavBar"
            android:title="@string/navigation_bar_title" />

        <PreferenceScreen
            android:key="navigation_ring"
            android:fragment="com.android.settings.cyanogenmod.NavRing"
            android:title="@string/navigation_ring_title" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/tool_bar_listview">

        <ListPreference
            android:key="listview_animation"
            android:dialogTitle="@string/listview_animation_title"
            android:title="@string/listview_animation_title"
            android:entries="@array/listview_animation_entries"
            android:entryValues="@array/listview_animation_values"
            android:defaultValue="1" />

        <ListPreference
            android:key="listview_interpolator"
            android:dialogTitle="@string/listview_interpolator_title"
            android:title="@string/listview_interpolator_title"
            android:entries="@array/listview_interpolator_entries"
            android:entryValues="@array/listview_interpolator_values"
            android:defaultValue="0" />

    </PreferenceCategory>

    <PreferenceScreen
            android:key="hardware_keys"
            android:fragment="com.android.settings.cyanogenmod.HardwareKeys"
            android:title="@string/hardware_keys_title" />

</PreferenceScreen>
